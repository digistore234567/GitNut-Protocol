{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gitnut.dev/schemas/content-policy.schema.json",
  "title": "content-policy.schema",
  "description": "Content policy for imports, builds, and publication (paths, file types, secrets, size limits).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "name",
    "limits",
    "rules"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "enum": [
        "1.0.0"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "description": {
      "type": "string",
      "maxLength": 4000
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "maxRepoSizeMB",
        "maxFileSizeMB",
        "maxFileCount",
        "maxPathLength"
      ],
      "properties": {
        "maxRepoSizeMB": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20000
        },
        "maxFileSizeMB": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000
        },
        "maxFileCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000
        },
        "maxPathLength": {
          "type": "integer",
          "minimum": 16,
          "maximum": 4096
        },
        "blockSymlinks": {
          "type": "boolean"
        },
        "blockGitSubmodules": {
          "type": "boolean"
        },
        "blockLfs": {
          "type": "boolean"
        }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2000,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "action",
          "match"
        ],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "allow",
              "deny",
              "warn"
            ]
          },
          "match": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "pathGlob": {
                "type": "string",
                "maxLength": 2000
              },
              "extension": {
                "type": "array",
                "items": {
                  "type": "string",
                  "maxLength": 20
                },
                "maxItems": 200
              },
              "mime": {
                "type": "array",
                "items": {
                  "type": "string",
                  "maxLength": 120
                },
                "maxItems": 200
              },
              "containsRegex": {
                "type": "array",
                "items": {
                  "type": "string",
                  "maxLength": 500
                },
                "maxItems": 200
              }
            }
          },
          "message": {
            "type": "string",
            "maxLength": 2000
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          }
        }
      }
    },
    "secretScanning": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "patterns": {
          "type": "array",
          "maxItems": 400,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "regex"
            ],
            "properties": {
              "name": {
                "type": "string",
                "maxLength": 120
              },
              "regex": {
                "type": "string",
                "maxLength": 800
              },
              "severity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high",
                  "critical"
                ]
              }
            }
          }
        }
      }
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}